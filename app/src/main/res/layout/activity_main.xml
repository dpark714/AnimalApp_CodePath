<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@id/subBar"
        android:layout_marginTop="5dp"
        android:background="#e4e7ea"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asia - South America"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textColor="@color/charcoal"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@id/imagePanda"
        android:layout_marginBottom="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/subBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mar 17 - Mar 17 ✏️"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/filterBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Filters"
        android:textColor="@color/blue"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@id/lineView"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Couldn't find any bamboos"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_medium"
        android:textStyle="bold"
        android:textColor="@color/charcoal"
        app:layout_constraintTop_toBottomOf="@id/imagePanda"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are no bamboo shoots available for\nyour area."
        android:fontFamily="@font/poppins_regular"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/message"
        app:layout_constraintStart_toStartOf="@id/message"
        app:layout_constraintEnd_toEndOf="@id/message"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="396dp"
        tools:ignore="SmallSp" />


    <Button
        android:id="@+id/button"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_button"
        android:text="Change to Bamboo Leaves"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:fontFamily="@font/poppins_medium"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@id/subMessage"
        app:layout_constraintStart_toStartOf="@id/subMessage"
        app:layout_constraintTop_toBottomOf="@id/subMessage" />

    <ImageView
        android:id="@+id/imagePanda"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginBottom="120dp"
        app:srcCompat="@drawable/panda"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="300dp" />



</androidx.constraintlayout.widget.ConstraintLayout>